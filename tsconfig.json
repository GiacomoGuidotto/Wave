{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "buttons": [
        "src/components/buttons"
      ],
      "fragments": [
        "src/components/fragments"
      ],
      "layouts": [
        "src/components/layouts"
      ],
      "items": [
        "src/components/items"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "globals/*": [
        "src/lib/globals/*"
      ],
      "models/*": [
        "src/lib/models/*"
      ],
      "services/*": [
        "src/lib/services/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "styles/*": [
        "styles/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
